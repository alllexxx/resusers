{% extends 'GrtResBundle::layout.html.twig' %}

{% block namepage %}
    <h3>
        {% trans %} Resource {% endtrans %}
        {{ resource.base.name }}
        {% trans %} user {% endtrans %}
        <a href="{{ path('grt_user_show', { 'userId': user.id }) }}" title="{% trans %}user{% endtrans %}">
            {{ user.firstname }}&nbsp {{ user.middlename }}&nbsp{{ user.lastname }}
        </a>
    </h3>
{% endblock %}

{% block body %}
    <div class="show_user">
        <table class="table">
            <tr>
                <td class="name-col">{% trans %}ID/Login{% endtrans %}</td>
                <td>{{ resource.login }}</td>
            </tr>
            {% if resource.ip %}
                <tr>
                    <td class="name-col">{% trans %}IP address{% endtrans %}</td>
                    <td>{{ resource.ip }}</td>
                </tr>
            {% endif %}
            {% if resource.term is not null and resource.term|date('d-m-Y')!='01-01-2100'  %}
                <tr>
                    <td class="name-col">{% trans %}Term{% endtrans %}</td>
                    <td>{{ resource.term|date('d-m-Y')}}</td>
                </tr>
            {% endif %}
            {% if resource.annotation %}
                <tr>
                    <td class="name-col">{% trans %}Обоснование{% endtrans %}</td>
                    <td>{{ resource.annotation}}</td>
                </tr>
            {% endif %}
            {% if resource.docFile %}
                <tr>
                    <td class="name-col">{% trans %}Приложение{% endtrans %}</td>
                    <td>{{ resource.docFile}}</td>
                </tr>
            {% endif %}
            <tr>
                <td class="name-col">{% trans %}Admin that last modified {% endtrans %}</td>
                <td>{{ resource.admin.username}}</td>
            </tr>
            <tr>
                <td class="name-col">{% trans %}Updated{% endtrans %}</td>
                <td>{{ resource.updated|date('d-m-Y\\ H:i:s')}}</td>
            </tr>
            <tr>
                <td class="name-col">{% trans %}Created{% endtrans %}</td>
                <td>{{ resource.created|date('d-m-Y\\ H:i:s')}}</td>
            </tr>
        </table>
    </div>
{% endblock %}