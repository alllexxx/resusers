<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Users & organizations{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/styles.css') }}">
            <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
        {% endblock %}

    </head>
    <body>
        <section id="wrapper">

                <header id="header">
                    <div class="language">
                        {% block languages %}
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                <span><a href="{{ path('fos_user_security_logout') }}">Выход&nbsp<i class="fa fa-sign-in" aria-hidden="true"></i></a></span>
                            {% endif %}
                        {% endblock %}
                    </div>
                    <hgroup>
                        <h2>{% block site_title %}<a href="{{ path('grt_homepage') }}">Ресурсы пользователей </a>{% endblock %}</h2>
                    </hgroup>
                </header>


            {% block sidebar %}
            {% endblock %}

            <section class="main-col">
                {% block javascripts %}
                    <script src="{{ asset('build/scripts.js') }}"></script>
                {% endblock %}
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    {% block namepage %}{% endblock %}
                    {% block body %}{% endblock %}
                {% endif %}
                {% block login %}{% endblock %}
            </section>



            <div id="footer">
                {% block footer %}
                {% endblock %}
            </div>
        </section>

    </body>
</html>
